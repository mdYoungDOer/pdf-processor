{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/api" }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "excludeFiles": "{__pycache__/**,*.pyc,.git/**,tests/**,**/*.test.py}"
    }
  }
}
