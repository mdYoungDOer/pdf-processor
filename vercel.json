{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/api" }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "excludeFiles": "{__pycache__/**,*.pyc,.git/**,tests/**,**/test/**,**/tests/**,**/*.test.py,**/docs/**,**/doc/**,**/examples/**,**/.pytest_cache/**,**/*.egg-info/**,**/*.dist-info/**,*.md,!README.md}"
    }
  }
}
